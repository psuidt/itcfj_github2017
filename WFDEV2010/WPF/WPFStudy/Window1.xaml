<Window x:Class="WPFStudy.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFStudy"
        Title="Window1" Height="300" Width="508"
        >
    <!--AllowsTransparency="True" WindowStyle="None"-->
    <Grid>
        <StackPanel>
            <Border  CornerRadius="3" BorderBrush="Black" BorderThickness="1" Width="338" Height="150" Margin="3">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Yellow" Offset="0.0"/>
                    <GradientStop Color="White" Offset="0.93"/>
                </LinearGradientBrush>
            </Border.Background>
            </Border>
            <Border CornerRadius="82" Background="LightYellow" BorderBrush="Red" BorderThickness="12,3,4,5">
                <Button  x:Name="btn"  Width="80" Height="90"  Click="btn_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Red" Direction="0" ShadowDepth="6" Opacity="1"></DropShadowEffect>
                    </Button.Effect>
                    确定</Button>
            </Border>
            <Button Cursor="Help">Help</Button>
            <local:CustomTextBlock Text="7"/>
              
        </StackPanel>
        
    </Grid>
</Window>
